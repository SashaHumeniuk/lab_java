import java.util.Arrays;
import java.util.Random;
import java.util.Scanner;

public class MatrixSorting {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the size of the matrix (n): ");
        int n = scanner.nextInt();

        int[][] matrix = generateRandomMatrix(n);

        System.out.println("Original Matrix:");
        printMatrix(matrix);

        System.out.print("Enter the column (or row) to sort (0 to n-1): ");
        int k = scanner.nextInt();

        if (k >= 0 && k < n) {
            sortMatrix(matrix, k);
            System.out.println("Sorted Matrix:");
            printMatrix(matrix);
        } else {
            System.out.println("Invalid column (or row) index.");
        }

        scanner.close();
    }

    public static int[][] generateRandomMatrix(int n) {
        int[][] matrix = new int[n][n];
        Random random = new Random();

        int maxRandomValue = n;
        int minRandomValue = -n;

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < n; j++) {
                matrix[i][j] = random.nextInt(maxRandomValue - minRandomValue + 1) + minRandomValue;
            }
        }

        return matrix;
    }

    public static void sortMatrix(int[][] matrix, int k) {
        Arrays.sort(matrix, (a, b) -> Integer.compare(a[k], b[k]));
    }

    public static void printMatrix(int[][] matrix) {
        for (int[] row : matrix) {
            for (int element : row) {
                System.out.print(element + " ");
            }
            System.out.println();
        }
    }
}
